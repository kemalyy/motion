datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// ─── Auth Models (NextAuth.js compatible) ─────────────────────

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  projects Project[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Core Models ──────────────────────────────────────────────

model Project {
  id              String   @id @default(uuid())
  userId          String
  name            String
  description     String?
  status          String   @default("draft")
  width           Int      @default(1920)
  height          Int      @default(1080)
  fps             Int      @default(30)
  durationMs      Int      @default(5000)
  backgroundColor String   @default("#FFFFFF")
  audioPath       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceFiles      SourceFile[]
  animationPresets AnimationPreset[]
  renderJobs       RenderJob[]
  promptHistory    PromptHistory[]
}

model SourceFile {
  id               String   @id @default(uuid())
  projectId        String
  originalName     String
  originalPath     String
  svgPath          String?
  format           String
  conversionStatus String   @default("pending")
  conversionError  String?
  fileSize         BigInt
  createdAt        DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  layers  Layer[]
}

model Layer {
  id           String   @id @default(uuid())
  sourceFileId String
  name         String
  sortOrder    Int
  svgContent   String   @db.Text
  x            Float    @default(0)
  y            Float    @default(0)
  width        Float
  height       Float
  visible      Boolean  @default(true)
  metadata     Json?
  createdAt    DateTime @default(now())

  // Text layer fields
  isTextLayer  Boolean  @default(false)
  textContent  String?  @db.Text
  fontFamily   String?  @default("Inter")
  fontSize     Int?     @default(48)
  fontColor    String?  @default("#FFFFFF")
  textAlign    String?  @default("center")
  fontWeight   Int?     @default(600)

  sourceFile      SourceFile       @relation(fields: [sourceFileId], references: [id], onDelete: Cascade)
  layerAnimations LayerAnimation[]
}

model AnimationPreset {
  id              String   @id @default(uuid())
  projectId       String
  name            String   @default("Varsayılan")
  isActive        Boolean  @default(true)
  totalDurationMs Int      @default(5000)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  layerAnimations LayerAnimation[]
  renderJobs      RenderJob[]
}

model LayerAnimation {
  id                String  @id @default(uuid())
  animationPresetId String
  layerId           String
  sortOrder         Int
  animationType     String  @default("fadeIn")
  delayMs           Int     @default(0)
  durationMs        Int     @default(500)
  easing            String  @default("easeInOut")
  direction         String?
  fromOpacity       Float   @default(0)
  toOpacity         Float   @default(1)
  fromScale         Float   @default(1)
  toScale           Float   @default(1)
  customParams      Json?

  animationPreset AnimationPreset @relation(fields: [animationPresetId], references: [id], onDelete: Cascade)
  layer           Layer           @relation(fields: [layerId], references: [id], onDelete: Cascade)

  @@unique([animationPresetId, layerId])
}

model PromptHistory {
  id        String   @id @default(uuid())
  projectId String
  prompt    String   @db.Text
  aiResponse Json
  applied   Boolean  @default(false)
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model RenderJob {
  id                String    @id @default(uuid())
  projectId         String
  animationPresetId String?
  status            String    @default("queued")
  progress          Int       @default(0)
  outputPath        String?
  outputSize        BigInt?
  width             Int       @default(1920)
  height            Int       @default(1080)
  fps               Int       @default(30)
  codec             String    @default("h264")
  errorMessage      String?
  attemptCount      Int       @default(0)
  durationSec       Int?
  startedAt         DateTime?
  completedAt       DateTime?
  createdAt         DateTime  @default(now())

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  animationPreset AnimationPreset? @relation(fields: [animationPresetId], references: [id])
  logs            RenderLog[]
}

model RenderLog {
  id          String   @id @default(uuid())
  renderJobId String
  level       String   @default("info")
  message     String   @db.Text
  createdAt   DateTime @default(now())

  renderJob RenderJob @relation(fields: [renderJobId], references: [id], onDelete: Cascade)
}
